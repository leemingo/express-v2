{
    "xgboost": {
        "ModelConfig": {
        "n_estimators": 100,
        "max_depth": 5,
        "seed": 0,
        "enable_categorical": false,
        "n_jobs": -1,
        "tree_method": "hist",
        "device": "cuda",
        "verbosity": 0,
        "eval_metric": "logloss"
        }
    },

    "soccermap": {
        "DataConfig": {
            "batch_size": 32,
            "val_split_ratio": 0.2,
            "num_workers": 1,
            "pin_memory": true
        },
        "TrainerConfig": {
            "max_epochs": 200,
            "min_epochs": 10,
            "gradient_clip_val": 2.0,
            "devices": [0],
            "accelerator": "gpu"
        },
        "OptimizerConfig": {
            "optimizer_params": {
                "lr": 1e-4,
                "weight_decay": 1e-5
            }
        },
        "ModelConfig": {
            "in_channels": 13
        },

        "EarlyStopConfig": {
            "monitor_metric": "val_loss",
            "patience": 20,
            "min_delta": 1e-3,
            "mode": "min",
            "strict": false,
            "verbose": true
        },
        "ModelCheckpoint": {
            "monitor_metric": "val_loss",
            "save_top_k": 1,
            "verbose": true,
            "mode": "min"
        }
    },
    
    "set-transformer": {
        "DataConfig": {
            "batch_size": 32,
            "num_workers": 30,
            "pin_memory": true
        },
        "TrainerConfig": {
            "max_epochs": 50,
            "min_epochs": 10,
            "gradient_clip_val": 10.0,
            "devices": 1,
            "accelerator": "gpu"
        },
        "OptimizerConfig": {
            "optimizer_params": {
                "lr": 1e-3,
                "weight_decay": 1e-5
            }
        },
        "ModelConfig": {
            "dim_hidden": 512,
            "num_heads": 8,
            "dropout": 0.2,
            "rnn_type": "gru"
        },

        "EarlyStopConfig": {
            "patience": 10,
            "min_delta": 1e-3,
            "mode": "min",
            "strict": false,
            "verbose": true
        },
        "ModelCheckpoint": {
            "save_top_k": 1,
            "verbose": true,
            "mode": "min"
        }
    },
    "exPress": {
        "DataConfig": {
            "batch_size": 32,
            "val_split_ratio": 0.2,
            "num_workers": 4,
            "pin_memory": true
        },
        "TrainerConfig": {
            "max_epochs": 200,
            "min_epochs": 10,
            "gradient_clip_val": 2.0,
            "devices": [0],
            "accelerator": "gpu"
        },
        "OptimizerConfig": {
            "optimizer_params": {
                "lr": 1e-4,
                "weight_decay": 1e-5
            }
        },
        "ModelConfig": {
            "in_channels": 18,
            "num_gnn_layers": 2,
            "gnn_hidden_dim": 64,
            "num_lstm_layers": 2,
            "lstm_hidden_dim": 64,
            "lstm_dropout": 0.4,
            "lstm_bidirectional": true,
            "use_pressing_features": false,
            "gnn_head": 4
        },

        "EarlyStopConfig": {
            "monitor_metric": "val_loss",
            "patience": 50,
            "min_delta": 1e-3,
            "mode": "min",
            "strict": false,
            "verbose": true
        },
        "ModelCheckpoint": {
            "monitor_metric": "val_loss",
            "save_top_k": 1,
            "verbose": true,
            "mode": "min"
        }
    }
}
